@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _signInManager

<ul class="navbar-nav">
	@if (_signInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbar-dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				@User.Identity?.Name
			</a>
			<ul class="dropdown-menu left-navbar" aria-labelledby="navbar-dropdown">
				<li>
					<a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
						Edit Profile
					</a>
				</li>
				<li>
					<a class="dropdown-item" asp-controller="Account" asp-action="Logout">
						Log out
					</a>
				</li>
			</ul>
		</li>
	}

</ul>