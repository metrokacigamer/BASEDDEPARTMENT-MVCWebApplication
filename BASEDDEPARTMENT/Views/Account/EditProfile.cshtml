@model UserProfileViewModel

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<ul style="border: solid; border-radius: 5px; border-width: 1px; padding-left: 0;">
				<li class="list-group-item btn-secondary" style="border-bottom: solid; border-bottom-width: 1px;">
					<a class="btn" href="@Url.Action("EditProfile", new { actionName = "username"})">User Name</a>
				</li>
				<li class="list-group-item btn-secondary" style="border-bottom: solid; border-bottom-width: 1px;">
					<a class="btn" href="@Url.Action("EditProfile", new { actionName = "password"})">Change Password</a>
				</li>
				<li class="list-group-item btn-secondary">
					<a class="btn" href="@Url.Action("EditProfile", new { actionName = "email"})">Email</a>
				</li>
			</ul>
		</div>
		<div class="col-md-9">
			@switch (Model.ActionName)
			{
				case "username":
					{
						@Html.Partial("_UserProfileUsernamePartial", Model)
						break;
					}
				case "password":
					{
						@Html.Partial("_UserProfilePasswordPartial", Model)
						break;
					}
				case "email":
					{
						@Html.Partial("_UserProfileEmailPartial", Model)
						break;
					}
				default:
					{
						goto case "username";
					}
			}
		</div>
	</div>

</div>
